<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="alma.scheduling.datamodel.obsproject">
    
    <class name="FieldSource" table="SOURCE">
    <cache usage="read-write"/>
        <id name="id" column="ID">            
            <generator class="native"/>
        </id>
        
        <property name="name" column="NAME"/>
        <property name="pmRA" column="PMRA"/>
        <property name="pmDec" column="PMDEC"/>
        <property name="ephemeris" type="string" column="EPHEMERIS" length="2000"/>
        <component name="coordinates" class="SkyCoordinates">
            <property name="RA" type="double" column="RA"/>
            <property name="Dec" type="double" column="DEC"/>
        </component>
        <component name="observability" class="FieldSourceObservability">
            <property name="alwaysVisible" type="boolean" column="ALWAYS_VISIBLE"/>
            <property name="alwaysHidden" type="boolean" column="ALWAYS_HIDDEN"/>
            <property name="azimuthRising" type="double" column="AZIMUTH_RISING"/>
            <property name="azimuthSetting" type="double" column="AZIMUTH_SETTING"/>
            <property name="risingTime" type="double" column="RISING_TIME"/>
            <property name="settingTime" type="double" column="SETTING_TIME"/>
            <property name="lastUpdate" type="date" column="LAST_UPDATE"/>
            <property name="validUntil" type="date" column="VALID_UNTIL"/>
        </component>
        
    </class>
    
</hibernate-mapping>