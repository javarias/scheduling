  </tilt3X>
  <tilt3Y>
    <amb:rcaMap relative_address="20482" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="32"
			scale="0.01"       offset="0" signedData="true"/>
    </amb:rcaMap>
  </tilt3Y>
  <tilt3Temperature>
    <amb:rcaMap relative_address="20482" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="48"
			scale="0.1"       offset="0" signedData="true"/>
