  <errors      description = "Errors Detected on CAN bus"
               format      = "%ld">
    <amb:rcaMap relative_address="196609" data_length="4">
      <amb:linearBitMap numberOfBits="32" fieldWidth="32"/>
    </amb:rcaMap>
  </errors>

  <transactions description = "Transactions completed on CAN bus"
                format      = "%ld">
    <amb:rcaMap relative_address="196610" data_length="4">
      <amb:linearBitMap numberOfBits="32" fieldWidth="32"/>
    </amb:rcaMap>
  </transactions>

  <temperature description = "Temperature from DS18S20"
               format      = "%ld">
    <amb:rcaMap relative_address="196611" data_length="4">
      <amb:ds1820TempBitMap/>
    </amb:rcaMap>
  </temperature>
