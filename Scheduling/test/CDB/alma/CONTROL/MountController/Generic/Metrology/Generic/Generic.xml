<MetrologyVA xmlns="urn:schemas-cosylab-com:MetrologyVA:1.0" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:amb="urn:schemas-cosylab-com:AmbDevice:1.0">
  <tilt1X>
    <amb:rcaMap relative_address="20480" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="16"
			scale="0.01"       offset="0" signedData="true"/>
    </amb:rcaMap>
  </tilt1X>
  <tilt1Y>
    <amb:rcaMap relative_address="20480" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="32"
			scale="0.01"       offset="0" signedData="true"/>
    </amb:rcaMap>
  </tilt1Y>
  <tilt1Temperature>
    <amb:rcaMap relative_address="20480" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="48"
			scale="0.1"       offset="0" signedData="true"/>
    </amb:rcaMap>
  </tilt1Temperature>
  <tilt2X>
    <amb:rcaMap relative_address="20481" data_length="6">
      <amb:linearBitMap numberOfBits="16" fieldWidth="16"
			scale="0.01"       offset="0" signedData="true"/>
