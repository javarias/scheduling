<MountVA xmlns="urn:schemas-cosylab-com:MountVA:1.0" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xmlns:amb="urn:schemas-cosylab-com:AmbDevice:1.0">
  <setIdleStowTime>
    <amb:rcaMap relative_address="4133" data_length="2">
      <amb:linearBitMap numberOfBits="16" fieldWidth="16" />
    </amb:rcaMap>
  </setIdleStowTime>

  <idleStowTime archive_min_int="300" 
                   archive_max_int="300"
                   archive_priority="6">
    <amb:rcaMap relative_address="37" data_length="2">
      <amb:linearBitMap numberOfBits="16" fieldWidth="16" />
    </amb:rcaMap>
  </idleStowTime>

  <setShutterMode>
    <amb:rcaMap relative_address="4142" data_length="1">
      <amb:enumBitMap numberOfBits="2" fieldWidth="8" >
        <amb:enumType enumName="SHUTTER_CLOSE"   enumValue="1" enumData="0"/>
        <amb:enumType enumName="SHUTTER_OPEN"    enumValue="0" enumData="1"/>
      </amb:enumBitMap>
    </amb:rcaMap>
  </setShutterMode>

  <shutterMode archive_min_int="300"
                  archive_max_int="300"
                  archive_priority="6">
    <amb:rcaMap relative_address="46" data_length="1">
      <amb:enumBitMap numberOfBits="2" fieldWidth="8" >
        <amb:enumType enumName="SHUTTER_CLOSE"   enumValue="1" enumData="0"/>
        <amb:enumType enumName="SHUTTER_OPEN"    enumValue="0" enumData="1"/>
        <amb:enumType enumName="HANDCRANK_INUSE" enumValue="2" enumData="2"/>
      </amb:enumBitMap>
    </amb:rcaMap>
  </shutterMode>

  <getError/>

  <localAccessMode archive_min_int="300"
                   archive_max_int="300"
                   archive_priority="6">
    <amb:rcaMap relative_address="34" data_length="2">
      <amb:booleanBitMap numberOfBits="1" fieldWidth="16"/>
    </amb:rcaMap>
  </localAccessMode>

  <getAzPosition/>
  <getElPosition/>

  <setAzAxisMode/>
  <azAxisMode/>
  <setElAxisMode/>
  <elAxisMode/>

  <setAzBrakeEngaged>
    <amb:rcaMap relative_address="4116" data_length="1">
      <amb:booleanBitMap numberOfBits="1" fieldWidth="8"/>
    </amb:rcaMap>
  </setAzBrakeEngaged>

  <azBrakeEngaged archive_min_int="300"
                   archive_max_int="300"
                   archive_priority="6">
    <amb:rcaMap relative_address="20" data_length="1">
      <amb:booleanBitMap numberOfBits="1" fieldWidth="8"/>
    </amb:rcaMap>
  </azBrakeEngaged>

  <setElBrakeEngaged>
    <amb:rcaMap relative_address="4100" data_length="1">
      <amb:booleanBitMap numberOfBits="1" fieldWidth="8"/>
    </amb:rcaMap>
  </setElBrakeEngaged>

  <elBrakeEngaged archive_min_int="300"
                  archive_max_int="300"
                  archive_priority="6">
    <amb:rcaMap relative_address="4" data_length="1">
      <amb:booleanBitMap numberOfBits="1" fieldWidth="8"/>
    </amb:rcaMap>
  </elBrakeEngaged>

  <azStatus archive_min_int="60"
            archive_max_int="60"
            archive_priority="6">
    <amb:rcaMap relative_address="27" data_length="8">
      <amb:patternBitMap numberOfBits="64" fieldWidth="64"/>
    </amb:rcaMap>
  </azStatus>

  <elStatus archive_min_int="60"
            archive_max_int="60"
            archive_priority="6">
    <amb:rcaMap relative_address="11" data_length="8">
      <amb:patternBitMap numberOfBits="64" fieldWidth="64"/>
    </amb:rcaMap>
  </elStatus>

  <getEncoderStatus/>

  <setTolerance/>
  <onTarget/>
  <setApplyAcuPointingModel/>
  <applyAcuPointingModel/>
  <recordPositionData/>

  <errors      description = "Errors Detected on AMB"
               format      = "%ld">
    <amb:rcaMap relative_address="196609" data_length="4">
      <amb:linearBitMap numberOfBits="32" fieldWidth="32"/>
    </amb:rcaMap>
  </errors>

  <transactions description = "Transactions on AMB"
                format      = "%ld">
    <amb:rcaMap relative_address="196610" data_length="4">
      <amb:linearBitMap numberOfBits="32" fieldWidth="32"/>
    </amb:rcaMap>
  </transactions>

  <temperature description = "Temperature from DS18S20"
               format      = "%ld">
    <amb:rcaMap relative_address="196611" data_length="4">
      <amb:ds1820TempBitMap/>
    </amb:rcaMap>
  </temperature>
  <Address/>
</MountVA>
