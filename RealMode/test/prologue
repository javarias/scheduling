#! /bin/bash

# Get required paths
ACS_CDB=$PWD

# Clean archive
archiveCleanMA >& sched_archive1.log
archiveLoadSchema >& sched_archive2.log

# Start acs processes
acsdataClean >& /dev/null 

acsStart >& sched_acsStart.log 

export ACS_INSTANCE=`grep "For this ACS session, please do an" sched_acsStart.log | cut -d\' -f2 | cut -d= -f2`
echo $ACS_INSTANCE > sched_acs_instance

acsStartContainer -cpp bilboContainer -b 0 >& sched_bilboContainer.log &
sleep 10

acsStartContainer -java frodoContainer -b 0 >& sched_frodoContainer.log &
sleep 20

#otprotoBatch targets.txt >& sched_almaOT.log
ALMA-OT -batch otproto.py targets-list.txt >& sched_almaOT.log
